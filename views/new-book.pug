extends layout.pug

block title
    title New Book

block content
    h1 New Book
    form(id="new-book" method="POST" action="/books/new" onsubmit="hasValues(['title','author'])(this)")
        p
            label(for="title") Title
            input(name="title" type="text" id="title" onkeyup="hasValue('string')(this)")
        p
            label(for="author") Author
            input(name="author" type="text" id="author" onkeyup="hasValue('string')(this)")
        p
            label(for="genre") Genre
            input(name="genre" type="text" id="genre")
        p
            label(for="year") Year
            input(name="year" type="text" id="year")
        p
            input(type="submit" value="Create New Book")
        p
            a(class="button" href="/books") Cancel
    script(src="/js/validate.js")